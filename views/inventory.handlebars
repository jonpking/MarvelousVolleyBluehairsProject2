<table class="table table-hover" >
        <thead class="thead text-white" style="background-color: #272b27">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Game Title </th>
            <th scope="col">Description</th>
            <th scope="col">Players</th>
            <th scope="col">Playing Time</th>
            {{!-- <th scope="col">Age</th>
            <th scope="col">Complexity Rating</th> --}}
             <th scope="col">Wishlist</th>
             <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
               {{#each games}}
              {{#unless on_wishlist}}
          <tr>
              <ul>
              <td>{{this.id}}</td>
              <td> <img width="150" height="Auto" src={{this.image_URL}}></td>
              <td> {{this.title}}</td>
              <td> {{this.description}}</td>
              <td> {{this.player_min}} - {{this.player_max}} </td>
              <td> {{this.playtime_min}} - {{this.playtime_max}} </td>
               {{!-- <td> {{this.min_age}}</td>
               <td> {{this.average_user_rating}}</td> --}}
               <td><button type="button" class="wishList btn btn-warning" id="wishList" data-id="{{this.id}}" data-newWishlist={{wishList}}> Wishlist </button></td>
                <td><button type="button" class="deleteGame btn btn-warning" id="deleteGame" data-id="{{this.id}}"> Delete </button></td>
              </ul>
          </tr>
          {{/unless}}
              {{/each}}
        </tbody>
      </table>
